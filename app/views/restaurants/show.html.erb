<h1 class="text-center"><%= @restaurant.name %></h1>
<div class="container text-center">
  <div class="bg-gradient rounded">
    <p>Specialty</p>
    <p><%= @restaurant.category %></p>
  </div>
  <div class="bg-gradient rounded">
    <p>Reviews</p>
    <div class="mh-25 overflow-auto" style="height: 100px">
      <% @restaurant.reviews.each do |review| %>
        <div class="d-flex justify-content-center">
          <div class="w-25 mb-2 card bg-dark border">
            <p class="border-bottom border-light"><%= review.content %></p>
            <p><%= review.rating %>/ 5</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="bg-gradient rounded">
    <p>Address</p>
    <p><%= @restaurant.address %></p>
  </div>
  <div class="bg-gradient rounded">
    <p>Contact</p>
    <p><%= @restaurant.phone_number %></p>
  </div>
  <div class="bg-gradient rounded"><div>
    <p>Average Rating</p>
    <p><%= @restaurant.rating ? "#{@restaurant.rating} / 5" : "Not rated yet" %></p>
    <%= link_to "Back", restaurants_path %>
  </div>
  <div class="bg-gradient rounded">
    <p>Add a Review</p>
    <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
